@model IEnumerable<Data.Domain.Room>

@{
    ViewBag.Title = "List";
}

<style>
    #add-room-btn {
        margin-bottom: 10px;
    }

    .user {
        width: 100%;
    }

    .name {
        margin-top: 10px;
    }

    .description {
        margin: 0;
        overflow: hidden;
    }

    li.list-group-item {
        margin-bottom: 5px;
    }
    a.join-btn {
        display: inline-block;
        float: right;
        width: 90px;
    }
</style>

<div class="row">
    <div class="col-xs-8 col-xs-offset-1">
        <a id="add-room-btn" href="@Url.Action("Create", "Room")" class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Add new room
        </a>
        <ul class="list-group">
            @foreach (var room in Model)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-xs-2">
                            <a href="@Url.Action("Show", "User", new { room.Host.Id })" title="@room.Host.FullName">
                                <img alt="@room.Host.FullName" class="user img-thumbnail" src="@room.Host.PictureFilePath" alt="@room.Host.FullName's room"/>
                            </a>
                        </div>
                        <div class="col-xs-10">
                            <h4 class="name">
                                @room.Name
                                <a href="@Url.Action("Details", "Room", new{room.Id})" class="btn btn-default btn-sm join-btn">Join</a>
                            </h4>
                            <p class="description">@room.Description</p>
                            <p class="text-muted">Hosted by @room.Host.FullName</p>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div class="col-xs-3">
        @* Maybe sidebar *@
    </div>
</div>
