@model Data.Domain.Room

@{
    ViewBag.Title = "Create";
}

<style>
    textarea {
        min-height: 120px;
    }
</style>

<div class="row">
    <div class="col-xs-4 col-xs-offset-4">
        <h2>Create room</h2>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.ValidationMessageFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class="form-control", placeholder="Name", autofocus = true })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(m => m.Description, new { @class="form-control", placeholder="Description... (optional)" })
            </div>
            <div class="pull-right">
                <input type="submit" class="btn btn-success" value="Create" />
                <a href="@Url.Action("List", "Room")" class="btn btn-default">Back to list</a>
            </div>
        }
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}