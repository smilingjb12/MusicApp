@{
    ViewBag.Title = "Index";
}

@using Data.Domain
@model SocialApp.Models.MailIndexViewModel

<style>
    .tab-content {
        padding-top: 10px;
    }

    figure.user-picture figcaption {
        font-size: 12px;
        max-height: 48px;
    }

    .message-text {
        margin-bottom: 0;
    }

    .btn-view {
        min-width: 100px;
        margin-top: 3px;
    }
</style>

<div class="row">
    <div class="col-xs-7 col-xs-offset-1">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#inbox" data-toggle="tab">Inbox</a>
            </li>
            <li>
                <a href="#outbox" data-toggle="tab">Outbox</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="inbox">
                <ul class="list-group">
                    @if (!Model.ReceivedMessages.Any())
                    {
                        <li class="list-group-item">No items</li>
                    }
                    @foreach (MailMessage msg in Model.ReceivedMessages)
                    {
                        @Html.Partial("_MessageSummary", msg)
                    }
                </ul>
            </div>
            <div class="tab-pane" id="outbox">
                <ul class="list-group">
                    @if (!Model.SentMessages.Any())
                    {
                        <li class="list-group-item">No items</li>
                    }
                    @foreach (MailMessage msg in Model.SentMessages)
                    {
                        @Html.Partial("_MessageSummary", msg)
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-xs-2">
        <a href="@Url.Action("Create")" class="btn btn-success btn-block">
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Write new
        </a>
    </div>
</div>

@section scripts
{
    <script>
        $('#inbox, #outbox').on('click', '.btn-view', function() {
            $(this).addClass('hidden')
                   .siblings('.short-message')
                   .hide()
                   .end()
                   .siblings('.full-message')
                   .removeClass('hidden');
        });
        
        var activeTab = '@Model.ActiveTab';
        if (activeTab != '') {
            $('.nav-tabs a[href="#' + activeTab + '"]').tab('show');
        }
    </script>
}
