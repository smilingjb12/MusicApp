@{
    ViewBag.Title = "Create";
}

@model MailMessageViewModel

<style>
    textarea {
        min-height: 120px;
    }
</style>

<div class="row">
    <div class="col-xs-4 col-xs-offset-4">
        <h2>New message</h2>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.ValidationMessageFor(m => m.ReceiverId)
                @Html.DropDownListFor(m => m.ReceiverId, 
                    new SelectList(Model.Users, "Id", "FullName"), 
                    "Pick a receiver...", 
                    new { @class = "form-control"})
            </div>
            <div class="form-group">
                @Html.ValidationMessageFor(m => m.Text)
                @Html.TextAreaFor(m => m.Text, new { @class = "form-control", placeholder="Your message here" })
            </div>
            <div class="pull-right">
                <input type="submit" class="btn btn-success" value="Send" />
                <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
            </div>
        }
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}